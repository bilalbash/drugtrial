%h1= "Results"
- unless @trials.blank?
  %table.table.table-striped
    %thead
      %tr
        %th= "ID"
        %th

    %tbody
      - @trials.each do |trial|
        %tr
          %td= trial.id
          %td
            = link_to 'show results', "#", :class => 'btn btn-danger show-results', "data-id" => trial.id
- else
  %p
    = "sorry, create trial first"
  = link_to 'Create Trial', new_trial_path, :class => 'btn btn-primary'
